{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"lib": ["DOM", "ES2022"],
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"baseUrl": ".",
		"types": ["vite/client"],
	},
	"include": [".vitepress/**/*.ts", ".vitepress/**/*.vue", "**/*.d.ts"],
	"exclude": ["node_modules", "dist", "cache", ".vitepress/dist", ".vitepress/cache"]
}
